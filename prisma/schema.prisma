generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Task {
  id            String        @id @default(cuid())

  title         String
  description   String?

  dueDate       DateTime?
  priority      Priority      @default(LOW)
  status        Status        @default(NOT_STARTED)

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  tags          Tag[]

  @@index([title, status, priority, dueDate])
}

model Tag {
  id            String        @id @default(cuid())

  name          String        @unique
  color         String        @db.Char(7) @default("#202020")

  tasks         Task[]
}

enum Status {
  NOT_STARTED
  IN_PROGRESS
  OVERDUE
  DONE
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}